<div class="middle-container-addDoctor">
    <h2 class="text-design data">ADD DOCTOR</h2>

    <form id="add_doctor" class="form-signin" action="/api/uses" method="post">
        <div class="new_user">
            <h1>General</h1>
            <div class="form-group">
                <label for="doctorID" class="text-light">Doctor ID:</label>
                <input type="hidden" name="id" value="">
                <label for=""><%=users.length + 1%></label>
            </div>
            <div class="form-group">
                <label for="role" class="text-light">Type:</label>
                <div class="radio inline">
                    <input type="radio" id="radio-2" name="type" value="Heart" >
                    <label for="radio-2" class="radio-label">Heart</label>
                </div>
                <div class="radio inline">
                    <input type="radio" id="radio-3" name="type" value="Bone"   >
                    <label for="radio-3" class="radio-label">Bone</label>
                </div>
                <div class="radio inline">
                    <input type="radio" id="radio-4" name="type" value="Lungs"   >
                    <label for="radio-4" class="radio-label">Lungs</label>
                </div>
                <div class="radio inline">
                    <input type="radio" id="radio-5" name="type" value="Kidney"   >
                    <label for="radio-5" class="radio-label">Kidney</label>
                </div>
            </div>
            <h1>Identification</h1>
            <div class="form-group">
                <label for="Name" class="text-light">Name:</label>
                <input type="text" name="name" value="" >
            </div>
            <div class="form-group">
                <label for="Password" class="text-light">Password:</label>
                <input type="password" name="password" value="" >
            </div>
            <div class="form-group">
                <label for="Qualification" class="text-light">Qualification:</label>
                <input type="text" name="qualification" value="" >
            </div>
            <div class="form-group">
                <label for="MobileNumber" class="text-light">Mobile Number:</label>
                <input type="tel" name="mobileNo" value="" >
            </div>
            <div class="form-group">
                <label for="Email" class="text-light">Email ID:</label>
                <input type="text" name="email" value="" >
            </div>
            
    
    
            <div class="form-group">
                <button type="submit" class="btn text-dark update">Submit</button>
            </div>
    
        </div>
    </form>
      
      
      
